{{! Comments }}
<div class="card">
    <div class="card-header bi bi-chat-dots">{{#comments.size}}{{comments.size}}{{/comments.size}} Comments</div>
    <ul class="list-group-flush">
        {{#comments}}
            <li class="list-group-item">
                <span>
                    <span style="font-size: small">{{user.nickname}}</span>
                    <span style="font-size: xx-small">{{comments}}</span>&nbsp;
                    <button class="badge bi bi-pencil-square" style="color: black">수정</button>
                    <button class="badge bi bi-trash" style="color: black">삭제</button>
                </span>
                <div>{{comment}}</div>
            </li>
        {{/comments}}
    </ul>
</div>