{{>layouts/head}}
    <form id="createContentForm" action="/board/new" method="post" style="display: flex; flex-direction: column; width: 100%; height: 500px;">

        <div class="d-flex flex-column justify-content-center w-100" style="align-items: center;">
            <div class="form-group d-flex flex-column justify-content-center" style="align-items: center;">
                <label for="title">제목</label>
                <input type="text" id="title" name="title">
            </div>
            <br>
            <div class="form-group d-flex flex-column justify-content-center" style="align-items: center;">
                <label for="content">내용</label>
                <textarea name="content" id="content" cols="70" rows="10"></textarea>
            </div>
        </div>
        <br><br>
        <div style="display: flex; justify-content: center; align-items: center;">
            <input class="createContentFormBtn" type="submit" value="등록">
            <button class="createContentFormBtn" onclick="location.href='/board/main'">돌아가기</button>
        </div>

    </form>
{{>layouts/footer}}